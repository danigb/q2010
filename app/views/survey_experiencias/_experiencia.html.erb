
<p>
  <%= form.label :studies %>
  <% SurveyExperiencia::STUDY_CYCLES.each do |name| %>
    <%= form.check_box name %><%= form.label name, nil, :class => 'radio' %>
  <% end %>
</p>


<p>
  <%= form.label :studies_eval %>
<table>
  <thead>
    <tr>
    </tr>
  </thead>
  <% SurveyExperiencia::STUDIES.each do |topic| %>
    <tr>
      <td><%= form.label "studies_eval_#{topic}" %></td>
      <% Survey::RELEVANCE.each do |relevance| %>
        <td class="<%= relevance %>">
          <%= form.radio_button "studies_eval_#{topic}", relevance %>
          <span class="tooltip"><%= t(relevance) %> </span>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
</p>

<p>
  <label>Otras formas de aprendizaje que utilices.</label>
  <%= form.text_area :studies_eval_desc %>
</p>

<p>
  <%= form.label :formation %>
  <%= form.radio_button :formation, :yes %><label class="radio">Sí</label>
  <%= form.radio_button :formation, :no %><label class="radio">No</label>
</p>

<p>
  <%= form.label :formation_desc %>
  <%= form.text_area :formation_desc %>
</p>

<p>
  <%= form.label :formation_kind %>
  <%= form.check_box :formation_kind_course %><%= form.label :formation_kind_course, nil, :class => 'checkbox' %>
  <%= form.check_box :formation_kind_exchange %><%= form.label :formation_kind_exchange, nil, :class => 'checkbox' %>
  <%= form.check_box :formation_kind_auto %><%= form.label :formation_kind_auto, nil, :class => 'checkbox' %>
  <%= form.check_box :formation_kind_net %><%= form.label :formation_kind_net, nil, :class => 'checkbox' %>
</p>

<p>
  <%= form.label :formation_kind_desc %>
  <%= form.text_area :formation_kind_desc %>
</p>

<p>
  <%= form.label :formation_done %>
<table>
  <thead>
    <tr>
      <% SurveyExperiencia::FORMATION.each do |topic| %>
        <td><%= SurveyExperiencia.human_attribute_name "formation_done_#{topic}"  %></td>
      <% end %>
    </tr>
  </thead>
  <% (1..5).each do |number| %>
    <tr>
      <% SurveyExperiencia::FORMATION.each do |topic| %>
        <td><%= form.text_field "formation_done_#{topic}_#{number}" %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<span class="info">32 caracteres máximo por cada caja de texto.</span>
</p>

