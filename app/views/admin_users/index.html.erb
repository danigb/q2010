<% title "Participantes" %>

<table>
  <thead><tr>
      <td>Nombre</td>
      <td>Email</td>
      <td>Fecha de alta</td>
      <td>Cuestionario completo</td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.fecha %></td>
        <td><%= user.survey_completed? ? 'Si' : 'No' %></td>
        <td class="actions">
          <%= link_to 'Ver', admin_user_path(user)  %>
          <%= link_to 'Editar', edit_admin_user_path(user)  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>