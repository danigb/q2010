<% title "Participantes" %>

<table>
  <thead><tr>
      <td>Nombre</td>
      <td>Email</td>
      <td>Fecha de alta</td>
      <td>Cuestionario completo</td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.fecha %></td>
        <td><%= user.survey_completed? ? 'Si' : 'No' %></td>
        <td>
          <%= link_to 'Ver su cuestionario', admin_survey_path(user)  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>